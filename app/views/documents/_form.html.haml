-# frozen_string_literal: true
= simple_form_for(@document) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title, as: :rich_text_area, label: 'Описание'
    %p
    Приложение
    %p
    = f.input :aplication, label: false
    %p
    = f.input :tipe, label: 'Тип документа', collection: [ ['0', 'правила'], ['1', 'инструкции'], ['2', 'методические указания']], label_method: :second, value_method: :first, include_blank: false
    %p

  .form-actions
    = f.button :submit, class: 'btn btn-sm btn-success'
  %p