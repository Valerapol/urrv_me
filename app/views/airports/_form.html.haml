-# frozen_string_literal: true
= simple_form_for(@airport) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :icao, label: 'ICAO'
    = f.input :iata, label: 'IATA'
    = f.label 'Логотип'
    %br
    - if @airport.logo.attached?
      = image_tag @airport.logo, width: "200px"
      .row
      = @airport.logo.filename
    .row
    = f.file_field :logo
    = f.input :name, label: 'Наименование'
    = f.input :name_en, label: 'Наименование на английском'
    = f.input :description, label: 'Описание', as: :rich_text_area
    = f.input :description_en, label: 'Описание на английском', as: :rich_text_area
    = f.input :fir, label: 'РПИ', collection: ['Ростов-на-Дону', 'Tbilisi', 'Yerevan', 'Baku']
    = f.input :class_apt, label: 'Класс аэропорта', collection: ['Международный', 'А, Б, В', 'Г, Д, Е']
    = f.input :coordinates, placeholder: 'Insert coordinates (format - "latitude, longitude")'
  %br
  .form-actions
    = f.button :submit, class: 'btn btn-sm btn-success'
