-# frozen_string_literal: true
= simple_form_for(@airport) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :icao
    = f.input :name
    = f.input :description, as: :rich_text_area
    = f.input :fir
    = f.input :coordinates, placeholder: 'Insert coordinates (format - "latitude, longitude")'
    = f.input :scenery, placeholder: 'Insert URL'

  .form-actions
    = f.button :submit
