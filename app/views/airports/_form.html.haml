-# frozen_string_literal: true
= simple_form_for(@airport) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :icao, label: 'ICAO'
    = f.input :iata, label: 'IATA'
    = f.label 'Логотип'
    %br
    = f.file_field :logo
    = f.input :name, label: 'Наименование'
    = f.input :description, label: 'Описание', as: :rich_text_area
    = f.input :fir, label: 'РПИ', collection: ['Ростов-на-Дону', 'Tbilisi', 'Yerevan', 'Baku']
    = f.input :coordinates, placeholder: 'Insert coordinates (format - "latitude, longitude")'
  %br
  .form-actions
    = f.button :submit, class: 'btn btn-sm btn-success'
